<!DOCTYPE html>
<html lang="en">
<head>
    <title>Matkaklubi - Kontakt</title>
    <%- include("./partials/header.ejs") %>
</head>
<body>
    <div class="container">
        <%- include("./partials/menyy.ejs") %>
        <div class="row">
            <div class="kontakt-sisu mt-3">
                <h2>Võta meiega ühendust</h2>
                <form action="/saadaKontakt" method = "post">
                    <div class="form-group">
                        <label for="nimi">Nimi</label>
                        <input placeholder="sinu nimi ..." type="text" class="form-control" name="nimi">
                    </div>
                    <div class="form-group">
                        <label for="markus">Sõnum</label>
                        <textarea placeholder="Kui on olulist infot..." class="form-control" name="markus" rows="10"></textarea>
                    </div>
                    <input type="submit" value="Saada" class="btn btn-primary mt-2">
                </form>
            </div>
        </div>
    </div>
</body>
</html>
